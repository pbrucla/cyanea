{
    "compilerOptions": {
        "lib": ["es2023"],
        "types": ["node"],
        "target": "es2022",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "strict": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "resolveJsonModule": true,
        "isolatedModules": false,
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "importHelpers": true,
        "downlevelIteration": false,
    },
    "ts-node": {
      "esm": true,
      "files": true,
      "logError": true,
      "pretty": true,
      "transpileOnly": false
    },
    "include": ["packages/**/*.ts"]
}
